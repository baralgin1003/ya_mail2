{
   "manifest_version": 3,
   "name": "__MSG_name__",
   "version": "8.22.3",
   "description": "__MSG_description__",
   "default_locale": "ru",
   "icons": {
      "128": "logo/chrome/mail_128.png",
      "16": "logo/chrome/ya_16_ru.png",
      "48": "logo/chrome/mail_48.png"
   },
   "background": {
      "service_worker": "background/backend.js"
   },
   "action": {
      "default_icon": "button/img/mail_no_connect.png"
   },
   "content_scripts": [ {
      "all_frames": false,
      "js": [ "includes/nano-includes.min.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   }, {
      "all_frames": true,
      "js": [ "includes/nano-includes-frames.min.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   }, {
      "all_frames": false,
      "js": [ "includes/mail-includes.min.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ],
   "options_page": "options/options.html",
   "incognito": "split",
   "permissions": [ 
      "contextMenus", 
      "webNavigation", 
      "cookies", 
      "bookmarks", 
      "history", 
      "unlimitedStorage", 
      "management", 
      "tabs", 
      "notifications", 
      "idle",
      "declarativeNetRequest"
   ],
   "host_permissions": [
      "http://*/*", 
      "https://*/*",
      "chrome://favicon/"
   ],
   "web_accessible_resources": [{
      "resources": [ 
         "balloon/mail/img/icon.png", 
         "logo/*", 
         "includes/*", 
         "common/*" 
      ],
      "matches": [ "<all_urls>" ]
   }],
